    
  //*** 1.1
  
  Функция ЕстьДополнительноеПравоПоКоду(Код, Значение = Истина) Экспорт // В общий модуль
  {
  	Право = ПланыВидовХарактеристик.ПраваПользователей.НайтиПоКоду(Код);
	Если Право = Неопределено ИЛИ Право = ПланыВидовХарактеристик.ПраваПользователей.ПустаяСсылка() Тогда
		Возврат Ложь;	
	КонецЕсли;
	
	Запрос = Новый Запрос;
	Запрос.Текст = 
		"ВЫБРАТЬ ПЕРВЫЕ 1
		|	ЗначенияДополнительныхПравПользователя.Значение
		|ИЗ
		|	РегистрСведений.ЗначенияДополнительныхПравПользователя КАК ЗначенияДополнительныхПравПользователя
		|ГДЕ
		|	ЗначенияДополнительныхПравПользователя.Пользователь = &Пользователь
		|	И ЗначенияДополнительныхПравПользователя.Право = &Право";
	Запрос.УстановитьПараметр("Пользователь", ПараметрыСеанса.ТекущийПользователь);
	Запрос.УстановитьПараметр("Право", Право);

	Результат = Запрос.Выполнить();
	ВыборкаДетальныеЗаписи = Результат.Выбрать();

	Если ВыборкаДетальныеЗаписи.Следующий() Тогда
		Возврат ВыборкаДетальныеЗаписи.Значение = Значение;
	Иначе
		Возврат Ложь;	
	КонецЕсли;
  }
  КонецФункции 
    
    
   //*** 1.2 
   
   
  Процедура ПередОткрытием(Отказ, СтандартнаяОбработка)
  {
  	 Если ВашОсновнойМодуль.ЕстьДополнительноеПравоПоКоду("000000001", Истина) Тогда // Запрет булево
	 	ЭлементыФормы.ОтражатьНекийЭлементФормы.Доступность = Ложь;
 	 КонецЕсли;
  }
  КонецПроцедуры
  
  
  //*** 1.3
  Функция ПолучитьИтоги(НачалоПериода, КонецПериода)
  {
	...
	Запрос = Новый Запрос;
	Запрос.Текст = 
		"ВЫБРАТЬ
	| ЧтоТо
	| ИЗ ЧегоТо
	| ГДЕ ТакТо	";
	Запрос.УстановитьПараметр("ДатаНач", НачалоПериода);
	Запрос.УстановитьПараметр("ДатаКон", КонецПериода);
	Запрос.УстановитьПараметр("Контрагент", Справочники.Контрагенты.НайтиПоКоду("0000000001"));	
	РезультатЗапроса = Запрос.Выполнить().Выбрать();
	ВыборкаПоЗапросу = РезультатЗапроса;
	Пока ВыборкаПоЗапросу.Следующий() Цикл
		Результат.Вставить("Итог1", 		ВыборкаПоЗапросу.ИтогОдин);
		Результат.Вставить("Итог2", 		ВыборкаПоЗапросу.ИтогДва);
		Результат.Вставить("Расчет",		Окр(ВыборкаПоЗапросу.Расчет, 3));		
		Возврат Результат;
	КонейЦикла;
	...
  }
  КонецФункции
  //*** 1.4
  
  Процедура ПриОткрытии()
	ЭлементыФормы.ДействияФормы.Кнопки.Кнопка1.Доступность = ЕстьДополнительноеПравоПоКоду("0000000001", Истина);  // Доступность кнопки(события) на форме
	ЭлементыФормы.ДействияФормы.Кнопки.Кнопка2.Доступность = ЕстьДополнительноеПравоПоКоду("0000000002", Истина);  // Доступность кнопки(события) на форме
  КонецПроцедуры
